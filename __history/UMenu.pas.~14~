    procedure BtnSaudeClick(Sender: TObject);
  private

  public
    { Public declarations }
    tema:string;
  end;

var
  Form1: TForm1;

implementation

{$R *.fmx}

uses UQuestions;

procedure TForm1.BtnJogarClick(Sender: TObject);
begin
FrmQuestions.Show;
  tema:='educacao';
  if(tema='educacao') then
    begin
      FrmQuestions.RBA.Text:='oiii';
    end;

end;

procedure TForm1.BtnSaudeClick(Sender: TObject);
begin
RecSaude.Visible:=True;
end;

end.
